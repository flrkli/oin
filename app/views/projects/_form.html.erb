<%= error_messages_for :project %>
<% form_for @project do |form| %>
  <div class="border">
    <div class="header">
      <%= title %>
    </div>
    <table>
      <tr>
        <td>Titel</td>
        <td><%= form.text_field :title %></td>
      </tr>
      <tr>
        <td>Kategorie</td>
        <td></td>
      <tr>
        <td>Kurzbeschreibung</td>
        <td><%= form.text_field :short_description %></td>
      </tr>
      <tr>
        <td>Beschreibung</td>
        <td><%= form.text_area :description %></td>
      </tr>
      <tr>
        <td>Offenes Projekt</td>
        <td><%= form.check_box :is_open %></td>
      </tr>
    </table>
    <div class="footer">
      <%= form.submit caption %>
    </div>
  </div>
<% end %>
